#include <stdio.h>
void main()
{
    int vote_age;
    char firstname[20], lastname[20];
    int bir_year;
    printf("Input your firstname: ");
    scanf("%s", firstname);
    printf("Input your lastname: ");
    scanf("%s", lastname);
    printf("Input your age: ");
    scanf("%d",&vote_age);

    printf("Name: %s %s\n", firstname, lastname);
    printf("Age: %d\n", vote_age);
    if (vote_age<18)
        {
            printf("Sorry, You are not eligible to caste your vote.\n");
            printf("You'll have to wait after %d year(s).\n",18-vote_age);
        }
    else
    printf("You are eligible for casting your vote.\n");
}
