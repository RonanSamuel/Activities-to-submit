#include<stdio.h>
int main (void)
{
    int x;
    int y;
    float c;

    printf("Enter first number: ");
    scanf("%d",&x);
    printf("Enter second number: ");
    scanf("%d",&y);

    c = (float)x+y;
    printf("The addition is %.2f \n", c);

    c = (float)x-y;
    printf("The difference is %.2f \n", c);

    c = (float)x*y;
    printf("The product is %.2f \n", c);

    c = (float)x/y;
    printf("The quotient is %.2f \n", c);

    return 0;
}
